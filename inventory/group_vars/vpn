# Extra inbounds configuration
# Using VLESS-XTLS-Reality for anti-censorship
#
# To generate Reality keys run: xray x25519
# To generate shortIds run: openssl rand -hex 4
#
# HAProxy configuration required for Reality on port 443:
#   frontend main_443
#       bind 0.0.0.0:443
#       mode tcp
#       default_backend be_xray_reality
#
#   backend be_xray_reality
#       mode tcp
#       server xray 127.0.0.1:44444 check
#
xray_extra_inbounds:
  # VLESS-XTLS-Reality (recommended for anti-censorship)
  - port: 44444
    listen: 127.0.0.1
    external_port: 443                    # HAProxy listens on 443
    external_dns_name: "{{ xray_dns_name }}"
    network: tcp
    security: reality
    flow: xtls-rprx-vision                # required for reality
    reality_dest: "www.google.com:443"    # SNI destination (mimics traffic to this site)
    reality_server_names:
      - "www.google.com"
    reality_private_key: "REPLACE_WITH_YOUR_PRIVATE_KEY"  # generate with: xray x25519
    reality_public_key: "REPLACE_WITH_YOUR_PUBLIC_KEY"    # for client connection strings
    reality_short_ids:                    # generate with: openssl rand -hex 4
      - ""
      - "a1b2c3d4"
    users: "{{ xray_users }}"

